@using Travel.Models
@model List<Blog>
<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @{ 
            int index = 1;
        }
        @foreach (var x in Model)
        {
        <li class="list-bg"><span>@index</span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
            index++;
        }
    </ul>
    <a href="/Blog/Index/" class="link1">Tüm Blokları Gör</a>
</div>